  - posX: float
  - posY: float
  - damage: int
  - width: int
  - height: int
  + advance(): void
  + getSpeed(): float
  + getSpeedX(): float
  + getSpeedY(): float
  + getPosX(): float
}

class Shield {
  - img: Image
  - world: World
  + draw(): void
  + intersection(): void
}

class Player {
  - score: int
  - img: Image
  - frame: JFrame
  - ammunition: int
  - magazine: int
  + fireAt(): void
  + boardDetection(): void
  + draw(): void
  + getScore(): int
  + setScore(): void
}

class EnemyBullet {
  - img: Image
  - frame: JFrame
  - world: World
  + attack(): void
  + intersection(): void
