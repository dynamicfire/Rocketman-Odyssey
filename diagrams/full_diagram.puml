  + fireAt(): void
  + drift(): void
  + draw(): void
  + getScore(): int
  + actionPerformed(): void
}

class is {
  - posX: float
  - posY: float
  - width: int
  - height: int
  - frame: JFrame
  + drift(): void
  + draw(): void
  + getPosX(): float
  + getPosY(): float
